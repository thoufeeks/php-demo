apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-liveness-faulty
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx-faulty
  template:
    metadata:
      labels:
        app: nginx-faulty
    spec:
      containers:
      - name: nginx
        image: nginx
        ports:
        - containerPort: 80
        livenessProbe:
          httpGet:
            path: /notfound
            port: 80
          initialDelaySeconds: 10
          periodSeconds: 5
